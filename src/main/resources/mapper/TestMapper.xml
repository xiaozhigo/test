    <select id="queryUserByIds" resultType="map">
        select * from tb_user u
        where 1=1
        and id in
        <foreach collection="array" item="id" index="index" open="(" separator="," close=")">
        #{id}
        </foreach>
    </select>

    <select id="queryItem" resultType="map">
        select * from tb_item
    </select>
</mapper>